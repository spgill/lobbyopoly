doctype html
html(ng-app="spgill.MonopolyManager" ng-cloak)
    head
        include head

    body(layout="column")

        //- Toolbar
        md-toolbar(ng-controller="ToolbarController as toolbar")
            div.md-toolbar-tools.rapper(layout="row" layout-align="start center")
                span.kabel LobbyOPOLY

                span.flex

                span {{ toolbar.global.lobby_code }}

                //- Toolbar menu button
                md-menu(ng-if="toolbar.global.lobby_code" md-position-mode="target-right target")
                    md-button.md-icon-button(ng-click="$mdOpenMenu($event)")
                        md-icon(md-menu-origin) info
                    md-menu-content(width="4")

                        //- Lobby code item
                        md-menu-item
                            md-button
                                div(flex layout="row")
                                    p(flex) Lobby Code:
                                    p(
                                        md-menu-align-target
                                        style="padding-right: 8px;"
                                        ) {{ toolbar.global.lobby_code }}

                        //- Rules item
                        md-menu-item
                            md-button(ng-click="toolbar.rules()")
                                div(flex layout="row")
                                    p(flex) Rules
                                    md-icon(md-menu-align-target) help

                        //- Players item
                        md-menu-item(ng-if="toolbar.global.lobby_button")
                            md-button(ng-click="toolbar.global.lobby_button()")
                                div(flex layout="row")
                                    p(flex) Players
                                    md-icon(md-menu-align-target) people


        //- Content/Router view
        md-content.rapper(flex ui-view)

        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-59759887-6', 'auto');
            ga('send', 'pageview');

        include scripts
